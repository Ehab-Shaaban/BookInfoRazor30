@page
@model BookInfoRazor30.Pages.BookList.IndexModel
@{
}
<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2 class="text-info">Book list</h2>
    </div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-info form-control text-light">Create new book</a>
    </div>
    <div class="col-12 border p-3 m-3">
        <form action="/" method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Auther"></label>
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(i => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.Auther)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm text-light">Delete</button>
                                <a asp-page="Edit" class="btn btn-success btn-sm text-light">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <h3 class="text-danger">No books found</h3>
            }
        </form>
    </div>
</div>